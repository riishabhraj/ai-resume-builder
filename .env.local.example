# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# LLM Provider Configuration
# Options: 'openai' or 'groq'
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here

# Groq Configuration (if using Groq)
# GROQ_API_KEY=your-groq-api-key-here

# LaTeX Compile Service
# For local development
LATEX_COMPILE_URL=http://localhost:3001/compile
# For production, use your deployed LaTeX service URL
# LATEX_COMPILE_URL=https://your-latex-service.com/compile

# App URL (used in emails and redirects)
NEXT_PUBLIC_APP_URL=https://resucraft.me

# Resend Configuration (for emails)
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=hello@yourdomain.com
RESEND_FROM_NAME=ResuCraft
RESEND_REPLY_TO=support@yourdomain.com

# Admin Configuration
ADMIN_SECRET=your-secure-random-secret
